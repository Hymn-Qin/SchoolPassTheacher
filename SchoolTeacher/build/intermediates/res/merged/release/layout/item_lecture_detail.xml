<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/navigationbar_side_add_selectbg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="@dimen/space_167"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <!-- 转发 -->

        <LinearLayout
            android:id="@+id/liner_lecture_detail_forward"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/side_top_window_bg"
            android:orientation="horizontal"
            android:paddingBottom="15dp"
            android:paddingLeft="13dp"
            android:paddingRight="13dp"
            android:paddingTop="15dp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/navigationbar_more_share" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:text="转发"
                android:textColor="@color/white"
                android:textSize="15sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="#2E7E21"
            />

        <!-- 收藏 -->

        <LinearLayout
            android:id="@+id/liner_lecture_detail_collect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="15dp"
            android:paddingLeft="13dp"
            android:paddingRight="13dp"
            android:background="@drawable/side_top_window_bg"
            android:paddingTop="15dp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/navigationbar_more_collection" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:text="收藏"
                android:textColor="@color/white"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>