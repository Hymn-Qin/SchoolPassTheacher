<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main_color"
    android:orientation="vertical" >

    <!-- 消息显示详情、声音、震动 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:background="@color/white"
        android:orientation="vertical" 
        android:visibility="gone">
        <RelativeLayout 
            android:id="@+id/rel_clear_cache"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="34dp"
            android:paddingRight="34dp">
            <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:text="声音"
	            android:textColor="#333333"
	            android:layout_alignParentLeft="true"
	            android:layout_centerVertical="true"
	            android:gravity="center_vertical"
	            android:textSize="13sp"/>
		    <com.yuanding.schoolteacher.view.toggle.ToggleButton
		        android:id="@+id/tb_set_voice"
		        android:layout_width="46dp"
		        android:layout_height="24dp"
	            android:layout_centerVertical="true"
	            android:layout_alignParentRight="true"
	            />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/title_line" />
        <RelativeLayout 
            android:id="@+id/rel_check_update"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="34dp"
            android:paddingRight="34dp">
            <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:text="震动"
	            android:textColor="#333333"
	            android:layout_alignParentLeft="true"
	            android:layout_centerVertical="true"
	            android:gravity="center_vertical"
	            android:textSize="13sp"/>
		    <com.yuanding.schoolteacher.view.toggle.ToggleButton
		        android:id="@+id/tb_set_vir"
		        android:layout_width="46dp"
		        android:layout_height="24dp"
	            android:layout_centerVertical="true"
	            android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </LinearLayout>
    <!-- 退出账号-->
    <LinearLayout
        
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:background="@color/white"
        android:orientation="vertical" >
        <TextView 
            android:id="@+id/tv_mian_darao"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="消息开启免打扰"
            android:textColor="#333333"
            android:gravity="center_vertical"
            android:paddingLeft="34dp"
            android:textSize="@dimen/sp_17"/>
    </LinearLayout>
</LinearLayout>