<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" 
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/rel_out_school_search_auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical" 
            android:paddingTop="9dp"
            android:paddingBottom="9dp">
            <com.yuanding.schoolteacher.view.CircleImageView
                android:id="@+id/iv_out_school_result_pro"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/tv_out_school_result_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_out_school_result_pro"
                android:textColor="#333333"
                android:textSize="17sp"
                android:layout_marginLeft="17dp"
                android:gravity="center_vertical" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:background="#CCCCCC" />
    </LinearLayout>

</LinearLayout>