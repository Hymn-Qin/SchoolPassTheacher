<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main_color"
    android:orientation="vertical" >
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="33dp"
	    android:layout_marginRight="33dp"
	    android:orientation="vertical">
	    <!-- 旧密码  再次输入密码-->
	    <LinearLayout
	        android:id="@+id/ll_old_pwd"
	        android:layout_width="match_parent"
	        android:layout_height="50dp"
	        android:layout_marginTop="13dp"
	        android:orientation="horizontal" 
	        android:background="@drawable/login_input_normal_bg"
	        android:gravity="center_vertical">
	        <EditText
	            android:id="@+id/user_set_old_pwd"
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:gravity="center_vertical"
	            android:layout_weight="1"
	            android:textColor="#999999"
	            android:hint="旧密码"
	            android:textColorHint="#999999"
	            android:background="@null"
	            android:textSize="@dimen/sp_17" 
	            android:password="true"
	            android:singleLine="true"/>
	    </LinearLayout>
	    <!-- 确认新密码 -->
	    <LinearLayout
	        android:id="@+id/ll_new_pwd"
	        android:layout_width="match_parent"
	        android:layout_height="50dp"
	        android:layout_marginTop="18dp"
	        android:background="@drawable/login_input_normal_bg"
	        android:orientation="horizontal" 
	        android:gravity="center_vertical">
	        <EditText
	            android:id="@+id/user_set_new_pwd"
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:gravity="center_vertical"
	            android:layout_weight="1"
	            android:background="@null"
	            android:hint="新密码"
	            android:textColorHint="#999999"
	            android:textColor="#999999"
	            android:textSize="@dimen/sp_17" 
	            android:password="true"
	            android:singleLine="true"/>
	    </LinearLayout>
	        
	    <!-- 确认新密码 -->
	    <LinearLayout
	        android:id="@+id/ll_sure_new_pwd"
	        android:layout_width="match_parent"
	        android:layout_height="50dp"
	        android:background="@drawable/login_input_normal_bg"
	        android:orientation="horizontal" 
	        android:layout_marginTop="18dp"
	        android:gravity="center_vertical">
	       
	        <EditText
	            android:id="@+id/user_sure_new_pwd"
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:gravity="center_vertical"
	            android:layout_weight="1"
	            android:textColor="#999999"
	            android:background="@null"
	            android:textSize="@dimen/sp_17" 
	            android:hint="确认新密码"
	            android:textColorHint="#999999"
	            android:password="true"
	            android:singleLine="true"/>
	    </LinearLayout>
	</LinearLayout>
	 <TextView 
	        android:id="@+id/tv_setpwd_title"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center_horizontal"
	        android:layout_marginTop="@dimen/space_17"
	        android:textColor="#666666"
	        android:textSize="@dimen/sp_13"
	        />
	<Button 
        android:id="@+id/btn_user_sure_modify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:layout_marginLeft="@dimen/space_23"
        android:layout_marginRight="@dimen/space_23"
        android:background="@drawable/login_button_bg"
        android:layout_gravity="center_horizontal"
        android:text="修改"
        android:textColor="@color/white"
        android:textSize="20sp"/>
</LinearLayout>