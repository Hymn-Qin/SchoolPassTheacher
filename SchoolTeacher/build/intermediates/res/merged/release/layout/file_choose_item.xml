<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/white"
    >

    <ProgressBar
        android:id="@+id/fileProgressBar"
        style="@style/tallerBarStyle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:max="100"
        android:progressDrawable="@drawable/progressbarb"
        android:visibility="gone"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <ImageView
            android:id="@+id/fileImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:src="@drawable/file_word"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/fileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/fileImage"
            android:text="这是文件名字"
            android:ellipsize="middle"
            android:singleLine="true"
            android:textColor="@color/black_code"
            android:textSize="16sp"
            android:layout_alignParentTop="true"/>

        <TextView
            android:id="@+id/fileDet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fileName"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/fileImage"
            android:text="这是文件信息"
            android:textSize="9sp"
            android:textColor="@color/title_no_focus_login"
            android:layout_alignParentBottom="true"
            />
        <View
            android:id="@+id/my_line"
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:background="@color/title_line"
            android:visibility="gone"
            />

    </RelativeLayout>

</RelativeLayout>