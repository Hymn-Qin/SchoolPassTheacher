<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main_color"
    android:orientation="vertical" 
     android:focusable="true"
    android:focusableInTouchMode="true"
    >

    <LinearLayout
        android:id="@+id/liner_notice_detail_whole"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/col_account_bg"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:fillViewport="true"
            android:overScrollMode="never"
            android:scrollbars="none" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp" >

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="50dp" 
                    android:layout_marginTop="@dimen/space_17"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/tv_temp_0098"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="26dp"
                        android:visibility="gone"
                        android:text="标题"
                        android:textColor="@color/black_code"
                        android:textSize="17sp" />
                  <EditText
                        android:id="@+id/et_repair_title"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@drawable/login_input_bg"
                        android:hint="标题"
                        android:textColorHint="#999999"
                        android:singleLine="true"
                        android:textColor="@color/black_code"
                        android:textSize="17sp" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.4dp"
                    android:visibility="gone"
                    android:background="#CCCCCC" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_marginTop="@dimen/space_17"
                    android:layout_height="50dp" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:visibility="gone"
                        android:background="@drawable/side_lost_goods" />

                    <TextView
                        android:id="@+id/tv_temp_0097"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="26dp"
                        android:text="类别"
                        android:visibility="gone"
                        android:textColor="@color/black_code"
                        android:textSize="17sp" />

                    <EditText
                        android:id="@+id/tv_type"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/tv_temp_0097"
                        android:background="@drawable/login_input_bg"
                        android:hint="选择类别"
                        android:textColorHint="#999999"
                        android:textColor="@color/black_code"
                        android:textSize="17sp" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.4dp"
                    android:visibility="gone"
                    android:background="#CCCCCC" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_marginTop="@dimen/space_17"
                    android:layout_height="50dp" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:visibility="gone"
                        android:background="@drawable/side_lost_position" />

                    <TextView
                        android:id="@+id/tv_temp_0096"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="26dp"
                        android:text="详细地址"
                        android:visibility="gone"
                        android:textColor="@color/black_code"
                        android:textSize="17sp" />

                   <EditText
                        android:id="@+id/et_repair_address"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@drawable/login_input_bg"
                        android:hint="详细地址"
                        android:textColorHint="#999999"
                        android:textColor="@color/black_code"
                        android:textSize="17sp" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.4dp"
                    android:visibility="gone"
                    android:background="#CCCCCC" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_marginTop="@dimen/space_17"
                    android:layout_height="50dp" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/tv_temp_0099"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="26dp"
                        android:text="联系方式"
                        android:visibility="gone"
                        android:textColor="@color/black_code"
                        android:textSize="17sp" />

                    <EditText
                        android:id="@+id/et_repair_phone"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@drawable/login_input_bg"
                        android:hint="联系方式"
                        android:textColorHint="#999999"
                        android:textColor="@color/black_code"
                        android:textSize="17sp" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.4dp"
                    android:visibility="gone"
                    android:background="#CCCCCC" />
                <LinearLayout 
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    >
                <EditText
                    android:layout_marginTop="@dimen/space_17"
                    android:id="@+id/et_repair__content"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/side_remark_bg"
                    android:hint="描述报修详情"
                    android:gravity="top"
                    android:paddingLeft="@dimen/space_20"
                    android:paddingTop="@dimen/space_10"
                    android:textColorHint="#999999"
                    android:textColor="@color/black_code"
                    android:textSize="17sp" />
         </LinearLayout>
               
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>