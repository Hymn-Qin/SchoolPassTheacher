<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_main_color"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:scrollbars="none" 
        >

        <LinearLayout
            android:id="@+id/liner_notice_detail_whole"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_17"
            android:background="@color/col_account_bg"
            android:orientation="vertical"
            android:paddingLeft="@dimen/space_20"
            android:paddingRight="@dimen/space_20" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="26dp"
                    android:text="拾获物品"
                    android:textColor="@color/black_code"
                    android:textSize="17sp"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/et_lost_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/login_input_bg"
                    android:hint="拾获物品"
                    android:singleLine="true"
                    android:textColor="@color/black_code"
                    android:textColorHint="#999999"
                    android:textSize="17sp" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.4dp"
                android:background="#CCCCCC"
                android:visibility="gone" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/space_17" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/side_lost_position"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_place"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="26dp"
                    android:text="拾获地点"
                    android:textColor="@color/black_code"
                    android:textSize="17sp"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/et_lost_place"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/login_input_bg"
                    android:hint="拾获地点"
                    android:textColor="@color/black_code"
                    android:textColorHint="#999999"
                    android:textSize="17sp" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.4dp"
                android:background="#CCCCCC"
                android:visibility="gone" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/space_17" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="26dp"
                    android:text="拾获时间"
                    android:textColor="@color/black_code"
                    android:textSize="17sp"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/et_lost_time"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/login_input_bg"
                    android:hint="拾获时间"
                    android:textColor="@color/black_code"
                    android:textColorHint="#999999"
                    android:textSize="17sp" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.4dp"
                android:background="#CCCCCC"
                android:visibility="gone" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/space_17" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="26dp"
                    android:text="联系方式"
                    android:textColor="@color/black_code"
                    android:textSize="17sp"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/et_lost_phone"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/login_input_bg"
                    android:hint="联系方式:默认本机电话"
                    android:inputType="phone"
                    android:singleLine="true"
                    android:textColor="@color/black_code"
                    android:textColorHint="#999999"
                    android:textSize="17sp" />
            </RelativeLayout>

            <EditText
                android:id="@+id/et_lost_desc"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_17"
                android:background="@drawable/side_remark_bg"
                android:gravity="top"
                android:hint="请描述物品"
                android:paddingLeft="@dimen/space_20"
                android:paddingTop="@dimen/space_10"
                android:textColor="@color/black_code"
                android:textColorHint="#999999"
                android:textSize="17sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.4dp"
                android:background="#CCCCCC"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/rela_add_iamge"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:visibility="gone" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/tv_add_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="26dp"
                    android:text="添加图片"
                    android:textColor="@color/black_code"
                    android:textSize="17sp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
               android:layout_marginBottom="20dp"
                 >

                <com.yuanding.schoolteacher.view.MyGridView
                    android:id="@+id/noScrollgridview"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="@dimen/space_17"
                    android:horizontalSpacing="10dp"
                    android:numColumns="2"
                    android:scrollbars="none"
                    android:verticalSpacing="10dp" >
                </com.yuanding.schoolteacher.view.MyGridView>
            </LinearLayout>

            
        </LinearLayout>
    </ScrollView>

</LinearLayout>