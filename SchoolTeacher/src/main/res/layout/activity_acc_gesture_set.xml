<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main_color"
    android:orientation="vertical" >

    <!-- 是否开启手势密码 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_13"
        android:background="@color/white"
        android:orientation="vertical" >
        <RelativeLayout 
            android:id="@+id/rl_set_gesture"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_50"
            android:paddingLeft="@dimen/space_34"
            android:paddingRight="@dimen/space_30">
            <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:text="通知手势设置"
	            android:textColor="#333333"
	            android:layout_alignParentLeft="true"
	            android:layout_centerVertical="true"
	            android:gravity="center_vertical"
	            android:textSize="@dimen/sp_17"/>
		    <com.yuanding.schoolteacher.view.toggle.ToggleButton
		        android:id="@+id/start_gesture_pwd"
                android:layout_width="@dimen/space_47"
                android:layout_height="@dimen/space_24"
	            android:layout_centerVertical="true"
	            android:layout_alignParentRight="true"
	            />
        </RelativeLayout>
        
    </LinearLayout>
</LinearLayout>