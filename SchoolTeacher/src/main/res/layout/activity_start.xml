<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/space_0"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1" >

        <ImageView
            android:id="@+id/image_Top"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/space_0"
            android:adjustViewBounds="true"
            android:scaleType="fitXY" />
         <Button
            android:id="@+id/btn_go_over"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/space_12"
            android:layout_marginRight="@dimen/space_12"
            android:textColor="#FFDD00"
            android:textSize="@dimen/sp_13"
            android:background="@drawable/splash_time_bg"
            android:visibility="gone"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_23"
        android:layout_marginTop="@dimen/space_23"
        android:gravity="center_horizontal" >

        <ImageView
            android:id="@+id/image_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/icon_start_logo"
            android:scaleType="fitXY" />
    </LinearLayout>

</LinearLayout>