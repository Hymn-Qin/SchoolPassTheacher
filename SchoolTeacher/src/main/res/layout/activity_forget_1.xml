<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:overScrollMode="never"
    android:scrollbars="none" > 
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:background="@drawable/bg_main_color"
	    android:focusable="true"
	    android:focusableInTouchMode="true"
	    android:orientation="vertical" >
	
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="24dp"
	        android:layout_marginBottom="20dp"
	        android:layout_marginLeft="37dp"
	        android:text="@string/str_login_title_text"
	        android:textColor="#666666"
	        android:visibility="gone"
	        android:textSize="13sp" />
	
	    <LinearLayout
	        android:id="@+id/liner_register_no"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="31dp"
	        android:layout_marginRight="31dp"
	        android:layout_marginTop="33dp"
	        android:background="@drawable/login_input_normal_bg"
	        android:gravity="center_vertical"
	        android:orientation="horizontal" >
	        <TextView 
	            android:id="@+id/tv_register_title"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="17sp"
	            android:textColor="#999999"
	            android:visibility="gone"
	            android:text="输入手机号"/>
		    <EditText 
		        android:id="@+id/et_reg_mobile_no"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_weight="1"
			    android:background="@null"
			    android:layout_marginLeft="4dp"
			    android:textSize="17sp"
			    android:hint="输入手机号"
			    android:textColorHint="#999999"
			    android:textColor="#333333"
			    android:inputType="number"
			    android:paddingTop="5dp"
			    android:paddingBottom="5dp"
			    android:singleLine="true"/>
		    
	    </LinearLayout>
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="31dp"
	        android:layout_marginRight="31dp" 
	        android:layout_marginTop="17dp"
	        android:gravity="center_vertical">
		    <LinearLayout 
		    android:id="@+id/liner_register_yanzheng"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/login_input_normal_bg"
	        android:gravity="center_vertical"
		        >
	        <TextView 
	            android:id="@+id/tv_yan_zheng_title"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="17sp"
	             android:textColor="#999999"
	             android:visibility="gone"
	            android:text="验证码"/>
		    <EditText 
		        android:id="@+id/tv_yanzheng_text"
			    android:layout_width="0px"
			    android:layout_height="wrap_content"
			    android:layout_weight="1"
			    android:background="@null"
			    android:paddingLeft="4dp"
			    android:paddingTop="5dp"
			    android:paddingBottom="5dp"
			    android:textSize="17sp"
			    android:textColor="#333333"
			    android:hint="验证码"
			    android:singleLine="true"
			    android:inputType="number"
			    android:maxLength="10"/>
		    </LinearLayout>
		    <Button 
		        android:layout_marginLeft="15dp"
		        android:id="@+id/btn_get_yanzheng_code"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="获取验证码"
		        android:background="@drawable/btn_get_yanzheng_code"
		        android:textColor="@color/white"
		        />
	    </LinearLayout>
	     <LinearLayout
	        android:id="@+id/liner_reset_pwd"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="31dp"
	        android:layout_marginRight="28dp"
	        android:layout_marginTop="17dp"
	        android:background="@drawable/login_input_normal_bg"
	        android:gravity="center_vertical"
	        android:visibility="gone"
	        android:orientation="horizontal" >
	        <TextView 
	            android:id="@+id/tv_reset_title"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="17sp"
	            android:textColor="#999999"
	            android:text="重设密码"/>
		    <EditText 
		        android:id="@+id/et_reset_pwd_no"
			    android:layout_width="0dp"
			    android:layout_height="wrap_content"
			    android:layout_weight="1"
			    android:background="@null"
			    android:layout_marginLeft="4dp"
			    android:textSize="17sp"
			    android:textColor="#333333"
			    android:inputType="number"
			    android:paddingTop="5dp"
			    android:paddingBottom="5dp"
			    android:singleLine="true"/>
		    
	    </LinearLayout>
	    <LinearLayout
	        android:id="@+id/liner_reset_sure_pwd"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="31dp"
	        android:layout_marginRight="28dp"
	        android:layout_marginTop="17dp"
	        android:background="@drawable/login_input_normal_bg"
	        android:gravity="center_vertical"
	        android:visibility="gone"
	        android:orientation="horizontal" >
	        <TextView 
	            android:id="@+id/tv_reset_sure_title"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="17sp"
	            android:textColor="#999999"
	            android:text="重复密码"/>
		    <EditText 
		        android:id="@+id/et_reset_pwd_sure_no"
			    android:layout_width="0dp"
			    android:layout_height="wrap_content"
			    android:layout_weight="1"
			    android:background="@null"
			    android:layout_marginLeft="4dp"
			    android:textSize="17sp"
			    android:textColor="#333333"
			    android:inputType="number"
			    android:paddingTop="5dp"
			    android:paddingBottom="5dp"
			    android:singleLine="true"/>
		    <ImageView 
		        android:id="@+id/iv_show_pwd"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:background="@drawable/icon_login_password_close"
		        
		        />
		    
	    </LinearLayout>
	    <TextView 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center_horizontal"
	        android:layout_marginTop="17dp"
	        android:textColor="@color/black_dan"
	        android:visibility="gone"
	        />
	    <Button 
	        android:id="@+id/btn_sure"
	        android:layout_marginTop="20dp"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_horizontal"
	        android:background="@drawable/login_button_bg"
	        android:text="确认"
	        android:visibility="gone"
	        android:layout_marginLeft="20dp"
	        android:layout_marginRight="20dp"
	        android:textColor="#FFFFFF"
	        android:textSize="20sp"
	        
	        />
	    <Button 
	        android:id="@+id/btn_next_step"
	        android:layout_marginTop="@dimen/space_17"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_horizontal"
	        android:background="@drawable/login_button_bg"
	        android:layout_marginLeft="@dimen/space_20"
	        android:layout_marginRight="@dimen/space_20" 
	        android:text="下一步"
	        android:textColor="#FFFFFF"
	        android:textSize="20sp"/>
	</LinearLayout>
</ScrollView>