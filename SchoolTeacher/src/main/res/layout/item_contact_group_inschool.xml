<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/col_account_bg"
    android:orientation="vertical" >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal" 
        android:background="#f8f8f8">
        <TextView
            android:id="@+id/text_parent_cate_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_32"
            android:layout_marginLeft="19dp"
            android:textColor="#333333"
            android:gravity="center_vertical"
            android:textSize="@dimen/sp_13" 
            android:text="招生处"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:background="#CCCCCC"
        android:visibility="visible" />
    
    <com.yuanding.schoolteacher.view.MyGridView
        android:id="@+id/navi_cate_chilid_gridview"  
        android:background="@color/white"
        android:layout_width="match_parent"  
        android:layout_height="wrap_content"
        android:layout_marginRight="-2dp"
        android:gravity="center"
        android:horizontalSpacing="@dimen/space_0"
        android:listSelector="@android:color/transparent"
        android:numColumns="3"
        android:scrollbars="none"
        android:stretchMode="columnWidth"
        android:verticalSpacing="@dimen/space_0" />
</LinearLayout>