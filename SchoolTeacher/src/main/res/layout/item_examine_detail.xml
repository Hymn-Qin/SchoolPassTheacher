<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/space_17"
        android:paddingRight="@dimen/space_17"
        android:paddingTop="@dimen/space_14"
        android:paddingBottom="@dimen/space_14">

        <TextView
            android:id="@+id/tv_item_examine_detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="#333333"
            android:textSize="@dimen/sp_17" />

        <TextView
            android:id="@+id/tv_item_examine_detail_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/space_3"
            android:layout_toRightOf="@+id/tv_item_examine_detail_title"
            android:background="@null"
            android:ellipsize="end"
            android:gravity="right"
            android:singleLine="true"
            android:textColor="@color/main_color"
            android:textSize="@dimen/sp_13" />
    </RelativeLayout>

</LinearLayout>