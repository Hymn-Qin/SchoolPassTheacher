<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/bg_main_color">

   <TextView 
        android:id="@+id/tv_receive_code_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textColor="@color/title_no_focus_login"
        android:textSize="@dimen/sp_13"
        android:gravity="center"
        android:layout_marginTop="@dimen/space_34"
        android:layout_marginBottom="@dimen/space_18"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_31"
        android:layout_marginRight="@dimen/space_31"
        android:gravity="center_vertical" >

        <LinearLayout
            android:id="@+id/liner_register_yanzheng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/login_input_normal_bg"
            android:gravity="center_vertical" >
            <EditText
                android:id="@+id/tv_yanzheng_text"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="验证码"
                android:inputType="number"
                android:maxLength="10"
                android:paddingBottom="@dimen/space_5"
                android:paddingLeft="@dimen/space_4"
                android:paddingTop="@dimen/space_5"
                android:singleLine="true"
                android:textColor="#333333"
                android:textColorHint="#999999"
                android:textSize="@dimen/sp_17" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_get_yanzheng_code_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_15"
            android:background="@drawable/btn_get_yanzheng_code"
            android:text="@string/str_get_verification_code"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/liner_set_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_31"
        android:layout_marginRight="@dimen/space_28"
        android:layout_marginTop="@dimen/space_18"
        android:background="@drawable/login_input_normal_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/et_set_pwd_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_4"
            android:layout_weight="1"
            android:background="@null"
            android:hint="密码(6-24位,数字或字母)"
            android:inputType="textPassword"
            android:paddingBottom="@dimen/space_5"
            android:paddingTop="@dimen/space_5"
            android:singleLine="true"
            android:textColor="#333333"
            android:textColorHint="#999999"
            android:textSize="@dimen/sp_17" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/liner_set_sure_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_31"
        android:layout_marginRight="@dimen/space_28"
        android:layout_marginTop="@dimen/space_18"
        android:background="@drawable/login_input_normal_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal" >
        <EditText
            android:id="@+id/et_set_pwd_sure_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_4"
            android:layout_weight="1"
            android:background="@null"
            android:hint="重复密码"
            android:inputType="textPassword"
            android:paddingBottom="@dimen/space_5"
            android:paddingTop="@dimen/space_5"
            android:singleLine="true"
            android:textColor="#333333"
            android:textColorHint="#999999"
            android:textSize="@dimen/sp_17" />
    </LinearLayout>
	<Button 
        android:id="@+id/btn_next_step_1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/login_button_bg"
        android:layout_marginLeft="@dimen/space_20"
        android:layout_marginRight="@dimen/space_20" 
        android:layout_marginTop="@dimen/space_33"
        android:text="下一步"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/sp_20"/>
</LinearLayout>