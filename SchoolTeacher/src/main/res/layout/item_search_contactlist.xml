<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_65" >

        <com.yuanding.schoolteacher.view.CircleImageView
            android:id="@+id/iv_black_list_por"
            android:layout_width="45dip"
            android:layout_height="45dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/space_15"
            android:background="@drawable/i_default_por_120" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_black_list_por"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_black_list_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/sp_17"
                android:text="管理员"
                android:textColor="#333333"
                android:textSize="@dimen/space_15" />

            <TextView
                android:id="@+id/tv_black_list_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/sp_17"
                android:text="123456789"
                android:textColor="#333333"
                android:textSize="@dimen/space_15" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/liner_search"
            android:layout_width="@dimen/space_65"
            android:layout_height="@dimen/space_65"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center" >

            <ImageView
                android:id="@+id/iv_black_lsit_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/register_box_unselected"
                android:visibility="visible" />
        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_marginLeft="@dimen/space_15"
        android:layout_marginRight="@dimen/space_15"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_1"
        android:background="@color/col_account_bg" />
</LinearLayout>