<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/liner_course_add_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:layout_marginBottom="@dimen/space_14">

        <RelativeLayout
            android:layout_width="@dimen/space_67"
            android:layout_height="@dimen/space_50"
            android:gravity="center" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/btn_side_course_add"
                android:visibility="visible" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingLeft="@dimen/space_20"
            android:paddingRight="@dimen/space_20" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_50" >

                <ImageView
                    android:id="@+id/iv_side_course_add_001"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/icon_course_time" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:singleLine="true"
                    android:layout_marginLeft="@dimen/space_7"
                    android:layout_toRightOf="@+id/iv_side_course_add_001"
                    android:text = "添加更多课程时间"
                    android:textColor="@color/start_title_col"
                    android:textSize="@dimen/sp_17" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>