<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main_color"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        android:visibility="gone"
        android:layout_marginTop="24dp" >
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="旧手机号"
	        android:textColor="#666666"
	        android:visibility="gone"
	        android:textSize="13sp" />
	    <EditText
	        android:id="@+id/tv_user_old_phone_no"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dp"
	        android:textColor="#666666"
	        android:background="@null"
	        android:hint="输入登录密码"
	        android:textColorHint="#999999"
	        android:textSize="@dimen/space_17" />
	  
    </LinearLayout>
    <LinearLayout
        android:id="@+id/liner_login_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_33"
        android:layout_marginRight="@dimen/space_33"
        android:layout_marginTop="@dimen/space_33"
        android:background="@drawable/login_input_normal_bg"
        android:gravity="center_vertical"
        >
        
	    <EditText 
	        android:id="@+id/tv_modify_login_pwd"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:background="@null"
		    android:paddingTop="5dp"
		    android:paddingBottom="5dp"
		    android:hint="输入登录密码"
		    android:textColorHint="#999999"
		    android:textSize="17sp"
		    android:textColor="#333333"
		    android:singleLine="true"
		    android:inputType="textPassword"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/liner_new_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="33dp"
        android:layout_marginRight="33dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/login_input_normal_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal" >
        <TextView 
            android:id="@+id/tv_register_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="#999999"
            android:visibility="gone"
            android:text="新手机号"/>
	    <EditText 
	        android:id="@+id/tv_new_mobile_text"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:background="@null"
		    android:hint="输入新手机号"
		    android:textColorHint="#999999"
		    android:textSize="17sp"
		    android:textColor="#333333"
		    android:paddingTop="5dp"
		    android:paddingBottom="5dp"
		    android:singleLine="true"/>
	    
    </LinearLayout>
    <LinearLayout
        android:id="@+id/liner_register_yanzheng"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="33dp"
        android:layout_marginRight="33dp" 
        android:layout_marginTop="24dp"
        android:gravity="bottom">
	    <LinearLayout 
	        android:id="@+id/ll_get_yanzheng_code"
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="wrap_content"
	        android:gravity="center_vertical"
	        android:background="@drawable/login_input_normal_bg"
	        >
        <TextView 
            android:id="@+id/tv_yan_zheng_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="#999999"
            android:visibility="gone"
            android:text="验证码"/>
	    <EditText 
	        android:id="@+id/tv_yanzheng_text_code"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:background="@null"
		    android:paddingTop="5dp"
		    android:paddingBottom="5dp"
		    android:hint="验证码"
		    android:textColorHint="#999999" 
		    android:textSize="17sp"
		    android:textColor="#333333"
		    android:singleLine="true"
		    android:inputType="number"
		    android:maxLength="10"/>
	    </LinearLayout>
	    <Button 
	        android:id="@+id/btn_get_yanzheng_code"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:layout_gravity="bottom|right"
	        android:layout_marginLeft="@dimen/space_10"
	        android:background="@drawable/btn_get_yanzheng_code"
	        android:text="获取验证码"
	        android:textColor="#FFFFFF"
	        android:textSize="@dimen/space_17"/>
    </LinearLayout>
    <Button 
        android:id="@+id/btn_sure_change"
         android:layout_marginTop="@dimen/space_14"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/space_22"
        android:layout_marginRight="@dimen/space_22"
        android:background="@drawable/login_button_bg"
        android:text="确认变更"
        android:textColor="#FFFFFF"
        android:textSize="20sp"/>
</LinearLayout>