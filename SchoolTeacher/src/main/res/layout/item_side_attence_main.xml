<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/my_messgae_bg"
    android:orientation="vertical" >
 <TextView 
    android:id="@+id/tv_attendence_main"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="当日考勤"
    android:layout_marginLeft="14dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:textColor="@color/black_dan"
    android:visibility="gone"
    />
<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginLeft="@dimen/space_13"
    android:layout_marginTop="13dp"
    android:layout_marginBottom="13dp"
    >
    <ImageView 
        android:id="@+id/iv_attdence_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <LinearLayout 
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
       <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="@dimen/space_6"
            >
            <TextView 
                android:id="@+id/tv_attendence_title"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="@dimen/sp_17"
                android:textColor="@color/main_tool_text_nor"
                />

            <ImageView 
                android:id="@+id/iv_attendence_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:layout_marginTop="@dimen/space_2"
                android:layout_marginLeft="@dimen/space_9"
                android:background="@drawable/icon_attence_checking"
                android:scaleType="fitXY"/>
            <TextView 
                android:id="@+id/tv_attendece_create_time"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:paddingTop="@dimen/space_2"
                android:layout_gravity="right"
                android:textSize="@dimen/sp_10"
                android:textColor="#999999"
                android:layout_marginLeft="@dimen/space_10"
                android:layout_marginRight="@dimen/space_10"
                android:gravity="right|center_vertical"
                />
        </LinearLayout>
        <LinearLayout 
            android:id="@+id/liner_leave_start_or_end"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="5dp"
            android:visibility="gone">
            <TextView 
                android:id="@+id/tv_leave_start_or_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:textColor="#666666"
                />
        </LinearLayout>
        <LinearLayout 
            android:id="@+id/liner_attence_result"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="5dp"
            android:visibility="visible">
            <TextView 
                android:id="@+id/tv_leave_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请假"
                android:textSize="@dimen/sp_12"
                android:textColor="#666666"
                />
            <TextView 
                android:id="@+id/tv_attence_leave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/main_color"
                />
             <TextView 
                android:id="@+id/tv_leave_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#666666"
                android:textSize="@dimen/sp_12"
                android:text="人"
                android:layout_marginRight="10dp"
                />
             <TextView 
                android:id="@+id/tv_absent_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="缺席"
                android:textSize="@dimen/sp_12"
                android:textColor="#666666"
                />
            <TextView 
                android:id="@+id/tv_attence_absent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:textSize="@dimen/sp_12"
                android:textColor="#FF7960"
                />
             <TextView 
                android:id="@+id/tv_absent_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#666666"
                android:textSize="@dimen/sp_12"
                android:text="人"
                android:layout_marginRight="10dp"
                />
             <TextView 
                android:id="@+id/tv_late_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="迟到"
                android:textSize="@dimen/sp_12"
                android:textColor="#666666"
                />
            <TextView 
                android:id="@+id/tv_attence_late"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:textColor="#FFC648"
                />
             <TextView 
                android:id="@+id/tv_late_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#666666"
                android:textSize="@dimen/sp_12"
                android:text="人"
                android:layout_marginRight="10dp"
                />
             <TextView 
                android:id="@+id/tv_early_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="早退"
                android:textSize="@dimen/sp_12"
                android:textColor="#666666"
                />
            <TextView 
                android:id="@+id/tv_attence_early"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/red"
                />
             <TextView 
                android:id="@+id/tv_early_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#666666"
                android:textSize="@dimen/sp_12"
                android:text="人"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
</LinearLayout>